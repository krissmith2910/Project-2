{{!-- <body> --}}

<!-- Main Bootstrap Search -->
<div class="container" style="background-color: rgb(51, 207, 228);">

  <!-- Jumbotron for Title -->
  <div class="jumbotron" style="background-color: orange ; color: rgb(2, 2, 2);">
    <h1 class="text-center">
      <strong>
        <i class="Header"></i> SLACK DESK</strong>
      <img src="/images/slack.png" height="80">
    </h1>

  </div>

  <!-- Table for requests  -->
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Select</th>
        <th scope="col">Request Id</th>
        <th scope="col">Requester</th>
        <th scope="col">Initial Description</th>
        <th scope="col">Request Class</th>
        <th scope="col">Operator</th>
        <th scope="col">Time</th>
      </tr>
    </thead>
    <tbody>
      {{#each requests}}
      <tr>
        <td>
          <button class="btn btn-default reqSelect" data-id={{this.id}}> Select</button>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Diary
</button>
        </td>
        <th scope="row">{{this.id}}</th>
        <td>{{this.requester}}</td>
        <td>{{this.initialDescription}}</td>
        <td>{{this.requestClass}}</td>
        <td>{{this.operator}}</td>
        <td>{{this.time}}</td>
      </tr>

      <!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Diary</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul>
          <li>{{this.id}}</li>
          <li>{{this.requester}}</li>
          <li>{{this.initialDescription}}</li>
          <li>{{this.time}}</li>
          <li>Diary Message:</li>
          <div>
Lorem ipsum dolor sit, amet consectetur adipisicing elit. Laborum mollitia dolorem, vitae commodi neque ullam recusandae non vel nam odit eveniet deleniti laudantium, inventore quia quidem culpa dolorum veniam nostrum!
          </div>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
      {{/each}}
